{% extends 'layout.html.twig' %}

{% block head %}
    <script src="{{ app.request.basepath }}/js/search.js"></script>
{% endblock %}

{% block content %}

    <div class="jumbotron">
        <form name="office" method="post" action="{{ url(action) }}">
            <div class="form-group">
                {{ form_row(form.query, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.range, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="filters">
                <div class="checkbox">
                    {{ form_row(form.isOpenInWeekends) }}
                </div>
                <div class="checkbox">
                    {{ form_row(form.hasSupportDesk) }}
                </div>
            </div>
            <div class="controls">
                {{ form_row(form.submit, { 'attr': {'class': 'btn btn-primary pull-right'} }) }}
                <div class="clearfix"></div>
            </div>
            {{ form_widget(form.latitude) }}
            {{ form_widget(form.longitude) }}
            {{ form_widget(form._token) }}
        </form>
    </div>

    <div id="alerts"></div>

    <ul id="offices" class="list-group" style="display: none"></ul>

{% endblock %}